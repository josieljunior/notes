<div id="<%= dom_id memo %>" class="<%= 'archived-memo' if memo.archived? %>">
  <p>
    <strong>Title:</strong>
    <%= memo.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= memo.content %>
  </p>

  <% if memo.tags.any? %>
    <p>
      <strong>Tags:</strong>
      <% memo.tags.each do |tag| %>
        <%= link_to tag.name, memos_path(tag: tag.name), class: "tag" %>
      <% end %>
    </p>
  <% end %>
</div>
